<script>
    $( "#clients_search" ).keyup(function() {
        search = $('#search').val();
        $.get( "/clients?search="+search, function( data ) {
            data_html_obj = $($.parseHTML( data ) );
            div = data_html_obj.find('#clients');
            $('#clients').html(div);
        });
    });
</script>
