<p id="notice"><%= notice %></p>

<style>
div#one {
    width: 75%;
    height: 130px;
    float: left;
}
div#two {
    margin-left: 15%;
    height: 110px;
}
.invoiceTitle{
  font-size: 30px;
}

</style>

<section>
    <div id="one">
      <p><b>L&R Landscaping </br>
      PO Box 9527 </br>
      Silver Spring, MD 20916 </b> </p> </br>
    </div>

    <div id="two">
      <b> <span class="invoiceTitle">Invoice </span> </br>
      Date   <%= Time.now.strftime("%m/%d/%Y") %> </br>
      Invoice # <%#= invoice.invoice_number %> </b>
    </div>
</section>

<section>
    <div id="one">
      <p><b> Bill To </b> </br>
       <%= @client.name %> </br>
       <%= @client.street_address %> </br>
       <%= @client.city %> <%= @client.zipcode %> </br>
       </p>
    </div>

    <div id="two">
      <p><b> Ship To </b> </br>
       <%= @client.name %> </br>
       <%= @client.street_address %> </br>
       <%= @client.city %> <%= @client.zipcode %> </br>
       </p>
    </div>
</section>

<h3>Services</h3>

<div class="table-responsive">
  <table id="invoice_print_table" class="table table-striped table-bordered table-hover table-condensed table-responsive">
    <thead>
      <tr>
        <th>Description</th>
        <th>Date of service</th>
        <th>Price</th>
        <th>Total</th>
      </tr>
    </thead>

    <tbody>
      <% @client.invoices.each do |invoice| %>
        <tr>
          <td><%= invoice.description %></td>
          <td><%#= invoice.date_of_service %></td>
          <td><%#= invoice.price %></td>
              <%# prices = invoice.client.invoices.where("paid IS FALSE").pluck(:price) %>
          <td><%#= '$' if prices.length>=1 %><%#= @total = prices.inject(0){|sum,x| sum + x } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<section>
    <div id="one">
      <p><b>L&R Landscaping </b></br>
      l&rlandscaping@email.com </br>
      (240)123-4567</p>
    </div>

    <div id="two">
      <table id="invoice_print_table">
        <tr>
          <th>Subtotal:</th>
          <td>$<%= @total %></td>
        </tr>
        <tr>
          <th>Sales Tax (0.0%)</th>
          <td></td>
        </tr>
        <tr>
          <th>Total</th>
          <td>$<%= @total %></td>
        </tr>
        <tr>
          <th>Payments/Credits</th>
          <td></td>
        </tr>
        <tr>
          <th>Balance Due</th>
          <td>$<%= @total %></td>
        </tr>
      </table>
    </div>
</section>

