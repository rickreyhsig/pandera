<p id="notice"><%= notice %></p>
<style>
div#one {
    width: 75%;
    height: 130px;
    float: left;
}
div#two {
    margin-left: 15%;
    height: 110px;
}
.invoiceTitle{
  font-size: 30px;
}

</style>

<section>
    <div id="one">
      <p><b>L&R Landscaping </br>
      4214 Landgreen St </br>
      Rockville, MD 20853 </b> </p> </br>
    </div>

    <div id="two">
      <b> <span class="invoiceTitle">Invoice </span> </br>
      Date <%= @invoice.created_at.strftime("%m/%d/%Y") %> </br>
      Invoice # <%= @invoice.invoice_number %> </b>
    </div>
</section>

<section>
    <div id="one">
      <p><b> Bill To </b> </br>
       <%= @invoice.client.name %> </br>
       <%= @invoice.client.street_address %> </br>
       <%= @invoice.client.city %> <%= @invoice.client.zipcode %> </br>
       </p>
    </div>

    <div id="two">
      <p><b> Ship To </b> </br>
       <%= @invoice.client.name %> </br>
       <%= @invoice.client.street_address %> </br>
       <%= @invoice.client.city %> <%= @invoice.client.zipcode %> </br>
       </p>
    </div>
</section>

<section>
    <div id="one">
      <h3 style="margin-top: 75px;">Services</h3>
    </div>

    <div id="two">
    </div>
</section>

<div class="table-responsive ">
  <table id="invoice_print_table" class="table table-striped table-bordered table-hover table-condensed table-responsive">
    <thead>
      <tr>
        <th>Description</th>
        <th>Date of service</th>
        <th>Price</th>
        <th>Total</th>
      </tr>
    </thead>

    <tbody>
      <% @invoice.services.each do |service| %>
        <tr>
          <td><%= service.description %></td>
          <td><%= service.date %></td>
          <td><%= service.price %></td>
          <td><%= service.price %></td>
              <% prices = service.client.services.pluck(:price) %>
          <% '$' if prices.length>=1 %><% @total = prices.inject(0){|sum,x| sum + x } %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<section>
    <div id="one">
      <p><b>L&R Landscaping </b></br>
      (240)330-8652</p>
    </div>

    <div id="two">
      <table id="invoice_print_table">
        <tr>
          <th>Subtotal:</th>

          <td>$<%= @total %></td>
        </tr>
        <tr>
          <th>Sales Tax (0.0%)</th>
          <td></td>
        </tr>
        <tr>
          <th>Total</th>
          <td>$<%= @total %></td>
        </tr>
        <tr>
          <th>Payments/Credits</th>
          <td></td>
        </tr>
        <tr>
          <th>Balance Due</th>
          <td>$<%= @total %></td>
        </tr>
      </table>
    </div>
</section>
