<h3 style="font-family: verdana, arial, helvetica, sans-serif;" class="page_title" >Schedules</h3>

<div id="schedules" class="card">
  <div class="table-responsive card-body">
    <table id="schedules_table" class="card-body table table-striped table-bordered table-hover table-condensed table-responsive">
      <thead>
        <tr>
          <th style="width: 35%;">Date</th>
          <th style="width: 50%;">Clients</th>
          <th style="width: 25%;"colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @schedules.each do |schedule| %>
          <tr>
            <td><%= schedule.date.strftime("%A, %m/%d/%Y") %></td>
            <td><%= schedule.client_schedules.map(&:client).map(&:name).join(', ') if schedule.client_schedules.map(&:client) %></td>
            <td><%= link_to 'Details', schedule %></td>
            <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
            <td><%= link_to 'Delete', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<span class="page_footer">
  <%= link_to 'New Schedule', new_schedule_path %>
</span>

<br><br>
