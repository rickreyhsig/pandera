<%= form_for(@schedule) do |f| %>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date %>
  </div>

  <table class='table table-striped table-bordered table-hover table-condensed table-responsive'>
    <thead>
      <tr>
        <th>Delete?</th>
        <th>Client</th>
        <th>Time</th>
        <th>Service Type</th>
        <th>Observation</th>
      </tr>
    </thead>
    <tbody class='fields'>
      <%= f.fields_for :client_schedules do |builder| %>
        <%= render 'client_schedule', f: builder %>
      <% end %>
    </tbody>
  </table>

  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
    <%= link_to_add_row('Add Client', f, :client_schedules, class: 'btn btn-primary') %>
  </div>
<% end %>

<%= render 'map2' %>

<script>

$(function() {
  $("#schedule_date").datepicker({ dateFormat: 'dd/mm/yy' });
});

$(function() {
  $("#timepicker").timepicker();
});

 $( function() {
    $(".client_schedule_input").autocomplete({
      source: $(".client_schedule_input").data('autocomplete-source')
    });
  } );

// Runs function every second
var myVar = setInterval(test, 1000);
function test() {
    $(".client_schedule_input").autocomplete({
      source: $(".client_schedule_input").data('autocomplete-source')
    });
}
</script>
