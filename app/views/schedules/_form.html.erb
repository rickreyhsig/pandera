<%= form_for(@schedule) do |f| %>
<% if @schedule.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this client from being saved:</h2>

    <ul>
    <% @schedule.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date, :autocomplete => :off %>
  </div>

  <table class='table table-striped table-bordered table-hover table-condensed table-responsive'>
    <thead>
      <tr>
        <th>Delete?</th>
        <th style="width: 285px;">Client</th>
        <th>Time</th>
        <th>Service Type</th>
        <th>Observation</th>
        <th>Done?</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody class='fields'>
      <%= f.fields_for :client_schedules do |builder| %>
        <%= render 'client_schedule', f: builder %>
      <% end %>
    </tbody>
  </table>

  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
    <%= link_to_add_row('Add Client', f, :client_schedules, class: 'btn btn-primary') %>
  </div>
<% end %>

<%= render 'map2' %>
<br/>

