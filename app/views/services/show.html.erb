<p>
  <strong><%= t('client')%>:</strong>
  <%= link_to Client.find(@service.client_id).name, Client.find(@service.client_id) %>
</p>

<p>
  <strong><%= t('date')%>:</strong>
  <%= @service.date %>
</p>

<p>
  <strong>Description:</strong>
  <%= @service.description %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @service.notes %>
</p>

<p>
  <strong>Price:</strong>
  <%= @service.price %>
</p>

<p>
  <strong>Maturity:</strong>
  <%= @service.maturity %>
</p>

<p>
  <strong>Invoice:</strong>
  <%= @service.invoice.id if @service.invoice %>
</p>

<p>
  <strong>Paid:</strong>
    <%= @service.paid ?  'Yes' : 'No' %>
</p>

<span class="page_footer">
  <%= link_to t('edit'), edit_service_path(@service) %>
</span>
